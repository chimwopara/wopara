// Minimized windows management
let minimizedWindows = [];

function minimizeWindowToHeader(windowData) {
    // Check if this directory is already minimized
    const pathString = windowData.currentPath.join('/');
    const existingMinimized = minimizedWindows.find(m => 
        m.currentPath.join('/') === pathString
    );
    
    if (existingMinimized) {
        // Already minimized, just close the window without adding duplicate
        addToHistory('close', { windowId: windowData.id, windowData: { ...windowData } });
        closeWindow(windowData.id);
        return;
    }
    
    // Close the window visually
    addToHistory('close', { windowId: windowData.id, windowData: { ...windowData } });
    closeWindow(windowData.id);
    
    // Add to minimized windows
    const minimizedData = {
        id: 'minimized-' + Date.now(),
        originalWindowId: windowData.id,
        title: windowData.title,
        currentPath: [...windowData.currentPath],
        timestamp: Date.now()
    };
    
    minimizedWindows.unshift(minimizedData); // Add to front
    
    // Limit to 5 minimized windows
    if (minimizedWindows.length > 5) {
        minimizedWindows = minimizedWindows.slice(0, 5);
    }
    
    updateMinimizedIndicators();
    
    // Keep the directory highlight active briefly
    setTimeout(() => {
        const currentSegments = document.querySelectorAll('.breadcrumb-segment');
        const lastSegment = currentSegments[currentSegments.length - 1];
        if (lastSegment) {
            lastSegment.style.background = 'rgba(255, 255, 255, 0.2)';
            lastSegment.style.borderRadius = '8px';
            lastSegment.style.transition = 'all 0.3s ease';
            
            setTimeout(() => {
                lastSegment.style.background = '';
                lastSegment.style.borderRadius = '';
            }, 1000);
        }
    }, 100);
}

function checkAndRemoveMinimizedWindow(windowPath) {
    const pathString = windowPath.join('/');
    const initialLength = minimizedWindows.length;
    
    console.log('Checking to remove minimized window for path:', pathString);
    console.log('Current minimized windows:', minimizedWindows.map(m => m.currentPath.join('/')));
    
    // Remove any minimized windows that match this EXACT path
    minimizedWindows = minimizedWindows.filter(m => {
        const minimizedPathString = m.currentPath.join('/');
        const shouldRemove = minimizedPathString === pathString;
        
        if (shouldRemove) {
            console.log('Removing minimized window:', minimizedPathString, 'because it matches:', pathString);
        }
        
        return !shouldRemove;
    });
    
    // Update indicators if anything was removed
    if (minimizedWindows.length !== initialLength) {
        console.log('Updated minimized windows after cleanup');
        updateMinimizedIndicators();
    }
}

function updateMinimizedIndicators() {
    const container = document.getElementById('minimizedWindows');
    if (!container) return;
    
    // Force clear all children
    while (container.firstChild) {
        container.removeChild(container.firstChild);
    }
    
    // Remove duplicates from minimizedWindows array
    const uniqueMinimized = [];
    const seenPaths = new Set();
    
    minimizedWindows.forEach(minimized => {
        const pathString = minimized.currentPath.join('/');
        if (!seenPaths.has(pathString)) {
            seenPaths.add(pathString);
            uniqueMinimized.push(minimized);
        }
    });
    
    // Update the array with deduplicated version
    minimizedWindows = uniqueMinimized;
    
    minimizedWindows.forEach(minimized => {
        const indicator = document.createElement('div');
        indicator.className = 'minimized-indicator';
        indicator.onclick = () => restoreMinimizedWindow(minimized);
        
        const folderName = minimized.currentPath[minimized.currentPath.length - 1] || 'Unknown';
        const icon = getFolderIcon(folderName);
        
        indicator.innerHTML = `
            <img src="${icon}" class="minimized-indicator-icon" alt="">
            <span class="minimized-indicator-text">${folderName}</span>
        `;
        
        container.appendChild(indicator);
    });
}

function restoreMinimizedWindow(minimizedData) {
    // Remove from minimized list FIRST
    minimizedWindows = minimizedWindows.filter(m => m.id !== minimizedData.id);
    updateMinimizedIndicators();
    
    // Recreate the window
    const folderName = minimizedData.currentPath[minimizedData.currentPath.length - 1];
    const mouseX = window.fsLastMousePosition ? window.fsLastMousePosition.x : 200;
    const mouseY = window.fsLastMousePosition ? window.fsLastMousePosition.y : 200;
    const windowX = Math.max(20, mouseX - 300);
    const windowY = Math.max(80, mouseY + 20);
    
    const newWindowId = createWindow(minimizedData.title, '', 650, 500, windowX, windowY);
    
    // Restore the path and content (no need to call checkAndRemoveMinimizedWindow since we already removed it)
    PathManager.updatePath(newWindowId, minimizedData.currentPath);
    
    let content;
    if (minimizedData.currentPath.length === 2 && minimizedData.currentPath[1] === 'Desktop') {
        content = generateFolderContent('Desktop', newWindowId);
    } else if (folderName) {
        const parentFolder = minimizedData.currentPath.length > 3 ? 
            minimizedData.currentPath[minimizedData.currentPath.length - 2] : null;
        content = generateFolderContent(folderName, newWindowId, parentFolder);
    }
    
    const contentElement = document.getElementById(newWindowId + '-content');
    if (contentElement && content) {
        contentElement.style.padding = '16px';
        contentElement.innerHTML = content;
    }
    
    focusWindow(newWindowId);
    
    // Auto-maximize on mobile
    if (window.innerWidth <= 768) {
        setTimeout(() => {
            toggleMaximize(newWindowId);
        }, 100);
    }
}

