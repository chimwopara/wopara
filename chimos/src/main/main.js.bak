// Add pinch-to-resize for windows
function addPinchResize() {
    let initialDistance = 0;
    let initialWidth = 0;
    let initialHeight = 0;
    let targetWindow = null;
    
    document.addEventListener('touchstart', function(e) {
        if (e.touches.length === 2) {
            const windowElement = e.target.closest('.window');
            if (windowElement) {
                targetWindow = windowElement;
                initialDistance = getDistance(e.touches[0], e.touches[1]);
                const rect = windowElement.getBoundingClientRect();
                initialWidth = rect.width;
                initialHeight = rect.height;
                e.preventDefault();
            }
        }
    }, { passive: false });
    
    document.addEventListener('touchmove', function(e) {
        if (e.touches.length === 2 && targetWindow) {
            const currentDistance = getDistance(e.touches[0], e.touches[1]);
            const scale = currentDistance / initialDistance;
            
            const newWidth = Math.max(300, initialWidth * scale);
            const newHeight = Math.max(200, initialHeight * scale);
            
            targetWindow.style.width = newWidth + 'px';
            targetWindow.style.height = newHeight + 'px';
            e.preventDefault();
        }
    }, { passive: false });
    
    document.addEventListener('touchend', function(e) {
        if (e.touches.length < 2) {
            targetWindow = null;
            initialDistance = 0;
        }
    });
}

function getDistance(touch1, touch2) {
    return Math.sqrt(
        Math.pow(touch2.clientX - touch1.clientX, 2) +
        Math.pow(touch2.clientY - touch1.clientY, 2)
    );
}

