// Saved items editing functionality
let savedEditingMode = false;
let savedLongPressTimer = null;
let savedLongPressStartTime = 0;

// Add event listeners after populateSaved generates the content
function addSavedItemListeners() {
    const savedItems = document.querySelectorAll('.saved-item');
    
    savedItems.forEach(item => {
        const directoryPath = item.dataset.path;
        const index = item.dataset.index;
        
        // Mouse events
        item.addEventListener('mousedown', (e) => startSavedItemLongPress(e, directoryPath, index));
        item.addEventListener('mouseup', endSavedItemLongPress);
        item.addEventListener('mouseleave', endSavedItemLongPress);
        
        // Touch events
        item.addEventListener('touchstart', (e) => startSavedItemLongPress(e, directoryPath, index), { passive: false });
        item.addEventListener('touchend', endSavedItemLongPress);
        item.addEventListener('touchcancel', endSavedItemLongPress);
    });
}

function startSavedItemLongPress(event, directoryPath, index) {
    if (savedEditingMode) return;
    
    event.preventDefault();
    savedLongPressStartTime = Date.now();
    
    savedLongPressTimer = setTimeout(() => {
        enterSavedEditingMode();
    }, 500);
}

function endSavedItemLongPress() {
    if (savedLongPressTimer) {
        clearTimeout(savedLongPressTimer);
        savedLongPressTimer = null;
    }
}

function handleSavedItemClick(event, directoryPath) {
    if (savedEditingMode) {
        event.preventDefault();
        event.stopPropagation();
        return;
    }
    
    const clickDuration = Date.now() - savedLongPressStartTime;
    if (clickDuration < 300) {
        navigateToSaved(directoryPath);
    }
}

function enterSavedEditingMode() {
    window.savedEditingMode = true;
    const savedGrid = document.querySelector('.saved-grid');
    const savedItems = document.querySelectorAll('.saved-item');
    
    if (savedGrid) {
        savedGrid.classList.add('editing');
    }
    
    savedItems.forEach(item => {
        item.classList.add('editing');
    });
    
    // Regenerate content to show done button
    populateSaved();
}

function exitSavedEditingMode() {
    window.savedEditingMode = false;
    const savedGrid = document.querySelector('.saved-grid');
    const savedItems = document.querySelectorAll('.saved-item');
    
    if (savedGrid) {
        savedGrid.classList.remove('editing');
    }
    
    savedItems.forEach(item => {
        item.classList.remove('editing');
    });
    
    // Regenerate content to hide done button and delete buttons
    populateSaved();
}

function deleteSavedItem(event, directoryPath, index) {
    event.preventDefault();
    event.stopPropagation();
    
    // Remove from saved directories
    const savedIndex = window.fsTappedDirectories.indexOf(directoryPath);
    if (savedIndex >= 0) {
        window.fsTappedDirectories.splice(savedIndex, 1);
        saveTappedDirectoriesToStorage();
        
        // Regenerate the saved items
        populateSaved();
        
        // Visual feedback on star button
        const starButton = document.querySelector('.star-button');
        if (starButton) {
            starButton.style.transform = 'scale(1.1) translateY(-2px)';
            starButton.style.background = 'rgba(239, 68, 68, 0.3)';
            setTimeout(() => {
                starButton.style.transform = '';
                starButton.style.background = '';
            }, 200);
        }
    }
}


