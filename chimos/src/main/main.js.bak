// Mobile touch support for star button
function initializeStarButtonTouch() {
const starButton = document.querySelector('.star-button');
if (starButton) {
    let touchStartTime = 0;
    
    starButton.addEventListener('touchstart', function(e) {
        e.preventDefault();
        touchStartTime = Date.now();
        startStarLongPress();
    }, { passive: false });
    
    starButton.addEventListener('touchend', function(e) {
        e.preventDefault();
        const touchDuration = Date.now() - touchStartTime;
        
        endStarLongPress();
        
        if (touchDuration < 500) {
            // Short tap - open blob (reset wasLongPress first)
            window.starLongPress.wasLongPress = false;
            handleStarClick();
        }
        // Long press was already handled by timer and set wasLongPress = true
    }, { passive: false });
}
