
// UNIFIED DRAG SYSTEM
const DragManager = {
    active: false,
    type: null,
    element: null,
    startPos: { x: 0, y: 0 },
    offset: { x: 0, y: 0 },
    threshold: 10,
    potential: false,
    resizeData: null,
    
    start(type, element, event, options = {}) {
    event.preventDefault();
    event.stopPropagation();
    
    this.type = type;
    this.element = element;
    this.startPos = { x: event.clientX, y: event.clientY };
    this.potential = true;
    
    const rect = element.getBoundingClientRect();
    this.offset = {
        x: event.clientX - rect.left,
        y: event.clientY - rect.top
    };
    
    // Store original position for potential restoration
    if (type === 'window') {
    const window = openWindows.find(w => w.id === options.windowId);
    if (window && !window.originalPosition) {
        const rect = element.getBoundingClientRect();
        window.originalPosition = {
            x: rect.left,
            y: rect.top,
            width: rect.width,
            height: rect.height
        };
    }
    this.originalPosition = {
        left: element.style.left,
        top: element.style.top
    };
}
        
        if (type === 'resize') {
            this.active = true;
            this.potential = false;
            this.resizeData = {
                windowId: options.windowId,
                handle: options.handle,
                startX: event.clientX,
                startY: event.clientY,
                startWidth: rect.width,
                startHeight: rect.height,
                startLeft: rect.left,
                startTop: rect.top
            };
        }
        
        if (type === 'window' && options.windowId) {
            focusWindow(options.windowId);
        }
    },
    
    update(event) {
        if (this.potential && !this.active) {
            const deltaX = Math.abs(event.clientX - this.startPos.x);
            const deltaY = Math.abs(event.clientY - this.startPos.y);
            
            if (deltaX > this.threshold || deltaY > this.threshold) {
                this.activateDrag();
            } else {
                return;
            }
        }
        
        if (!this.active) return;
        
        switch(this.type) {
            case 'folder':
                this.updateFolder(event);
                break;
            case 'window':
                this.updateWindow(event);
                break;
            case 'console':
                this.updateConsole(event);
                break;
            case 'resize':
                this.updateResize(event);
                break;
        }
    },
    
    activateDrag() {
        this.active = true;
        this.potential = false;
        
        this.element.classList.add('dragging');
        document.body.style.cursor = 'grabbing';
        document.body.style.userSelect = 'none';
        
        if (this.type === 'window') {
            this.handleWindowUnsnap();
        }
    },
    
    handleWindowUnsnap() {
const window = openWindows.find(w => w.id === this.element.id);
const wasMaximized = this.element.classList.contains('maximized');
const wasSnapped = this.element.classList.contains('snapped-left') || 
                    this.element.classList.contains('snapped-right');

if (wasMaximized || wasSnapped) {
    const snapClasses = ['snapped-left', 'snapped-right', 'snapped-top', 'snapped-bottom', 
                       'snapped-top-left', 'snapped-top-right', 'snapped-bottom-left', 
                       'snapped-bottom-right', 'maximized'];
    snapClasses.forEach(cls => this.element.classList.remove(cls));
    
    // Use saved original position if available, otherwise default size
    if (window && window.originalPosition) {
        this.element.style.width = window.originalPosition.width + 'px';
        this.element.style.height = window.originalPosition.height + 'px';
        this.offset.x = window.originalPosition.width / 2;
        this.offset.y = 20;
    } else {
        this.element.style.width = '800px';
        this.element.style.height = '600px';
        this.offset.x = 400;
        this.offset.y = 20;
    }
}
},
    
updateFolder(event) {
    // Nuclear mobile solution - no constraints except screen bounds
    if (window.innerWidth <= 768) {
        let newX = event.clientX - this.offset.x;
        let newY = event.clientY - this.offset.y;
        
        const folderWidth = this.element.offsetWidth || 80;
        const folderHeight = this.element.offsetHeight || 110;
        
        // Absolute minimum constraints - true edge to edge
        newX = Math.max(0, Math.min(newX, window.innerWidth - folderWidth));
        newY = Math.max(60, Math.min(newY, window.innerHeight - folderHeight)); // Only respect header
        
        this.element.style.left = newX + 'px';
        this.element.style.top = newY + 'px';
        return;
    }
    
    // Desktop keeps all the old logic untouched
    const desktop = document.getElementById('desktop');
    const desktopRect = desktop.getBoundingClientRect();
    
    let newX = event.clientX - desktopRect.left - this.offset.x;
    let newY = event.clientY - desktopRect.top - this.offset.y;
    
    const constrained = FolderBounds.getConstrainedPosition(
        newX, 
        newY, 
        this.element.offsetWidth, 
        this.element.offsetHeight
    );
    
    this.element.style.left = constrained.x + 'px';
    this.element.style.top = constrained.y + 'px';
},
    
    updateWindow(event) {
        const newX = event.clientX - this.offset.x;
        const newY = Math.max(70, event.clientY - this.offset.y);
        
        this.element.style.left = newX + 'px';
        this.element.style.top = newY + 'px';
        
        this.updateSnapFeedback(event.clientX, event.clientY);
    },
    
    updateConsole(event) {
        const newX = event.clientX - this.offset.x;
        const newY = event.clientY - this.offset.y;
        
        const maxX = window.innerWidth - 720;
        const maxY = window.innerHeight - 470;
        
        const boundedX = Math.max(20, Math.min(newX, maxX));
        const boundedY = Math.max(80, Math.min(newY, maxY));
        
        this.element.style.left = boundedX + 'px';
        this.element.style.top = boundedY + 'px';
    },
    
    updateResize(event) {
        if (!this.resizeData) return;
        
        const data = this.resizeData;
        const deltaX = event.clientX - data.startX;
        const deltaY = event.clientY - data.startY;
        
        let newWidth = data.startWidth;
        let newHeight = data.startHeight;
        let newLeft = data.startLeft;
        let newTop = data.startTop;
        
        switch(data.handle) {
            case 'se':
                newWidth = Math.max(300, data.startWidth + deltaX);
                newHeight = Math.max(200, data.startHeight + deltaY);
                break;
            case 'sw':
                newWidth = Math.max(300, data.startWidth - deltaX);
                newHeight = Math.max(200, data.startHeight + deltaY);
                newLeft = data.startLeft + deltaX;
                break;
            case 'ne':
                newWidth = Math.max(300, data.startWidth + deltaX);
                newHeight = Math.max(200, data.startHeight - deltaY);
                newTop = data.startTop + deltaY;
                break;
            case 'nw':
                newWidth = Math.max(300, data.startWidth - deltaX);
                newHeight = Math.max(200, data.startHeight - deltaY);
                newLeft = data.startLeft + deltaX;
                newTop = data.startTop + deltaY;
                break;
            case 'e':
                newWidth = Math.max(300, data.startWidth + deltaX);
                break;
            case 'w':
                newWidth = Math.max(300, data.startWidth - deltaX);
                newLeft = data.startLeft + deltaX;
                break;
            case 's':
                newHeight = Math.max(200, data.startHeight + deltaY);
                break;
            case 'n':
                newHeight = Math.max(200, data.startHeight - deltaY);
                newTop = data.startTop + deltaY;
                break;
        }
        
        this.element.style.width = newWidth + 'px';
        this.element.style.height = newHeight + 'px';
        this.element.style.left = newLeft + 'px';
        this.element.style.top = newTop + 'px';
    },
    
   updateSnapFeedback(mouseX, mouseY) {
    const threshold = 50;
    const cornerThreshold = 100;
    const clientWidth = document.documentElement.clientWidth;
    const clientHeight = document.documentElement.clientHeight;
    
    let borderColor = 'rgba(255, 255, 255, 0.2)';
    
    if (mouseX < cornerThreshold && mouseY < 70 + cornerThreshold) {
        borderColor = 'rgba(255, 255, 255, 1.0)';
    } else if (mouseX > clientWidth - cornerThreshold && mouseY < 70 + cornerThreshold) {
        borderColor = 'rgba(255, 255, 255, 1.0)';
    } else if (mouseY < 80) {
        borderColor = 'rgba(255, 255, 255, 1.0)';
    } else if (mouseX < threshold || mouseX > clientWidth - threshold) {
        borderColor = 'rgba(255, 255, 255, 1.0)';
    }
    
    this.element.style.borderColor = borderColor;
}
,
    
    end(event) {
const wasDragging = this.active;

if (this.active) {
    this.element.classList.remove('dragging');
    this.element.style.borderColor = 'rgba(255, 255, 255, 0.2)';
    
    if (this.type === 'window') {
        this.handleWindowSnapping(event);
        // Refocus window after snapping/unsnapping
        const windowId = this.element.id;
        setTimeout(() => focusWindow(windowId), 100);
    }
    
    if (this.type === 'folder') {
        this.saveFolderPosition();
    } else if (this.type === 'console') {
        this.saveConsolePosition();
    }
}

document.body.style.cursor = '';
document.body.style.userSelect = '';
this.reset();
},
    
handleWindowSnapping(event) {
const window = openWindows.find(w => w.id === this.element.id);
if (!window) return;

const threshold = 50;
const cornerThreshold = 100;
const clientWidth = document.documentElement.clientWidth;
const clientHeight = document.documentElement.clientHeight;

const snapClasses = ['snapped-left', 'snapped-right', 'snapped-top', 'snapped-bottom', 
                   'snapped-top-left', 'snapped-top-right', 'snapped-bottom-left', 
                   'snapped-bottom-right', 'maximized'];
snapClasses.forEach(cls => this.element.classList.remove(cls));

// Save original position BEFORE any snapping
const rect = this.element.getBoundingClientRect();
window.originalPosition = {
    x: rect.left,
    y: rect.top,
    width: rect.width,
    height: rect.height
};

// Apply snapping based on final position
if (event.clientX < cornerThreshold && event.clientY < 70 + cornerThreshold) {
    this.element.classList.add('snapped-top-left');
    window.snapped = 'top-left';
} else if (event.clientX > clientWidth - cornerThreshold && event.clientY < 70 + cornerThreshold) {
    this.element.classList.add('snapped-top-right');
    window.snapped = 'top-right';
} else if (event.clientY < 80) {
    this.element.classList.add('maximized');
    window.snapped = 'maximized';
} else if (event.clientX < threshold) {
    this.element.classList.add('snapped-left');
    window.snapped = 'left';
} else if (event.clientX > clientWidth - threshold) {
    this.element.classList.add('snapped-right');
    window.snapped = 'right';
} else {
    window.snapped = false;
}
},
    
    saveFolderPosition() {
        const folderName = this.element.dataset.folder;
        const position = {
            x: parseInt(this.element.style.left),
            y: parseInt(this.element.style.top)
        };
        
        try {
            let folderPositions = JSON.parse(localStorage.getItem('fsLogic_folderPositions')) || {};
            folderPositions[folderName] = position;
            localStorage.setItem('fsLogic_folderPositions', JSON.stringify(folderPositions));
        } catch (error) {
            console.warn('Could not save folder position:', error);
        }
    },
    
    saveConsolePosition() {
        const position = {
            x: parseInt(this.element.style.left) || 150,
            y: parseInt(this.element.style.top) || 150
        };
        
        try {
            localStorage.setItem('fsConsole_position', JSON.stringify(position));
        } catch (error) {
            console.warn('Could not save console position:', error);
        }
    },
    
    reset() {
        this.active = false;
        this.type = null;
        this.element = null;
        this.startPos = { x: 0, y: 0 };
        this.offset = { x: 0, y: 0 };
        this.potential = false;
        this.resizeData = null;
    }
};

// FOLDER BOUNDS MANAGER
const FolderBounds = {
    constrainToViewport(folder) {
    const desktop = document.getElementById('desktop');
    if (!desktop) return;
    
    const folderRect = folder.getBoundingClientRect();
    
    // Get current position
    let currentX = parseInt(folder.style.left) || 0;
    let currentY = parseInt(folder.style.top) || 0;
    
    // Different constraints for mobile vs desktop
    if (window.innerWidth <= 768) {
        // Mobile: true edge-to-edge
        const maxX = window.innerWidth - folderRect.width;
        const maxY = window.innerHeight - folderRect.height;
        const minX = 0;
        const minY = 0; // Just below header
        
        const constrainedX = Math.max(minX, Math.min(currentX, maxX));
        const constrainedY = Math.max(minY, Math.min(currentY, maxY));
        
        if (currentX !== constrainedX || currentY !== constrainedY) {
            folder.style.left = constrainedX + 'px';
            folder.style.top = constrainedY + 'px';
            return { x: constrainedX, y: constrainedY };
        }
    } else {
        // Desktop: normal padding
       const headerHeight = 60;
        const padding = 0;
        const maxX = window.innerWidth - folderRect.width - padding;
       const maxY = window.innerHeight - folderHeight;
        const minX = padding;
        const minY = headerHeight;
        
        const constrainedX = Math.max(minX, Math.min(currentX, maxX));
        const constrainedY = Math.max(minY, Math.min(currentY, maxY));
        
        if (currentX !== constrainedX || currentY !== constrainedY) {
            folder.style.left = constrainedX + 'px';
            folder.style.top = constrainedY + 'px';
            return { x: constrainedX, y: constrainedY };
        }
    }
    
    return { x: currentX, y: currentY };
},
    
    constrainAllFolders() {
        const folders = document.querySelectorAll('.folder');
        folders.forEach(folder => this.constrainToViewport(folder));
    },
    
    getConstrainedPosition(x, y, folderWidth = 160, folderHeight = 200) {
    const headerHeight = 60;
    
// Mobile gets zero padding - true edge-to-edge
if (window.innerWidth <= 768) {
    const maxX = window.innerWidth - folderWidth;
    const maxY = window.innerHeight - folderHeight;
    const minX = 0; // No left padding
    const minY = headerHeight;
        
        return {
            x: Math.max(minX, Math.min(x, maxX)),
            y: Math.max(minY, Math.min(y, maxY))
        };
    }
    
// Desktop keeps original constraints
const padding = 0;
const maxX = window.innerWidth - folderWidth;
const maxY = window.innerHeight - folderHeight;
const minX = 0;
const minY = headerHeight;
    
    return {
        x: Math.max(minX, Math.min(x, maxX)),
        y: Math.max(minY, Math.min(y, maxY))
    };
}
};

// Mobile Folder Layout Manager
const MobileFolderLayout = {
    arrangeFoldersForMobile() {
        if (window.innerWidth > 768) return;
        
        const folders = document.querySelectorAll('.folder');
        const folderWidth = 80;
        const folderHeight = 110;
        const gap = 15;
        const startX = 10; // Small margin from edge
        const startY = 70; // Just below header with some padding
        
        // Force 4x2 grid for mobile (4 folders per row, 2 rows)
        const foldersPerRow = 2;
        
        folders.forEach((folder, index) => {
            const row = Math.floor(index / foldersPerRow);
            const col = index % foldersPerRow;
            
            // Left-align the grid with small margin
const leftOffset = 10; // Small margin from left edge

const x = leftOffset + (col * (folderWidth + gap));
            const y = startY + (row * (folderHeight + gap));
            
            folder.style.left = x + 'px';
            folder.style.top = y + 'px';
        });
        
        // Save new positions
        folders.forEach(folder => {
            const folderName = folder.dataset.folder;
            const position = {
                x: parseInt(folder.style.left),
                y: parseInt(folder.style.top)
            };
            
            try {
                let folderPositions = JSON.parse(localStorage.getItem('fsLogic_folderPositions')) || {};
                folderPositions[folderName] = position;
                localStorage.setItem('fsLogic_folderPositions', JSON.stringify(folderPositions));
            } catch (error) {
                console.warn('Could not save folder position:', error);
            }
        });
    }
};

// UNIFIED PATH MANAGER
const PathManager = {
updatePath(windowId, newPath) {
    console.log('PathManager.updatePath:', windowId, newPath);
    const window = openWindows.find(w => w.id === windowId);
    if (window) {
        // Store the old path before updating
        const oldPath = window.currentPath ? [...window.currentPath] : null;
        
        window.currentPath = [...newPath];
        console.log('Updated window path for', windowId, 'to:', window.currentPath);
        
        if (this.isActiveWindow(windowId)) {
            currentDirectory = [...newPath];
            updateDirectoryDisplay();
        }
        
        // Only check for cleanup if the path actually changed
        if (!oldPath || oldPath.join('/') !== newPath.join('/')) {
            checkAndRemoveMinimizedWindow(newPath);
        }
    } else {
        console.error('Window not found for path update:', windowId);
    }
},
    
    getPath(windowId) {
        const window = openWindows.find(w => w.id === windowId);
        return window ? [...window.currentPath] : ['Fromsupply'];
    },
    
    isActiveWindow(windowId) {
        const element = document.getElementById(windowId);
        return element && parseInt(element.style.zIndex) === windowZIndex;
    },
    
    navigateBack(windowId) {
focusWindow(windowId);

const path = this.getPath(windowId);
if (path.length > 2) {
    const newPath = path.slice(0, -1);
    this.updatePath(windowId, newPath);
    this.updateContent(windowId);
} else if (path.length === 2) {
    const folderName = path[1];
    const content = generateFolderContent(folderName, windowId);
    const contentElement = document.getElementById(windowId + '-content');
    if (contentElement) {
        contentElement.style.padding = '16px';
    }
}
},

navigateForward(windowId) {
// For now, this could be implemented with a forward history
// Currently just a placeholder - could track navigation history
console.log('Navigate forward not yet implemented');
},
    
    updateContent(windowId) {
        const contentElement = document.getElementById(windowId + '-content');
        const path = this.getPath(windowId);
        
        if (!contentElement || path.length < 2) return;
        
        contentElement.style.padding = '16px';
        const folderName = path[1];
        const content = generateFolderContent(folderName, windowId);
        contentElement.innerHTML = content;
    }
};

