// DIRECTORY DISPLAY
function updateDirectoryDisplay() {
    const directoryNav = document.getElementById('directoryNav');
    const directoryPath = document.getElementById('directoryPath');
    const logoText = document.querySelector('.logo-text');

    if (openWindows.length === 0) {
        directoryNav.classList.add('hidden');
        if (logoText) logoText.classList.remove('hidden');
        // Force cleanup of any lingering mobile elements
        if (window.innerWidth <= 768) {
            hideBlobSearchButton();
        }
        return;
    } else {
        directoryNav.classList.remove('hidden');
        if (logoText) logoText.classList.add('hidden');
    }
    
    // ALWAYS filter out Fromsupply and Desktop - they should never appear
    const filteredDirectory = currentDirectory.filter(segment => 
        segment !== 'Fromsupply' && segment !== 'Desktop'
    );
    
    // If nothing left after filtering, hide the nav
    if (filteredDirectory.length === 0) {
        directoryNav.classList.add('hidden');
        if (logoText) logoText.classList.remove('hidden');
        return;
    }
    
    const segments = filteredDirectory.map((segment, index) => {
        const directoryPath = currentDirectory.slice(0, index + 2).join('/'); // Adjust for original path
        const isCurrentDirectory = index === filteredDirectory.length - 1;
        const currentFullPath = currentDirectory.join('/');
        const wasTapped = window.fsTappedDirectories.includes(currentFullPath);
        const cssClass = (isCurrentDirectory && wasTapped) ? 'breadcrumb-segment current-tapped' : 'breadcrumb-segment';
        const folderIcon = getFolderIcon(segment);

        const iconHtml = `<img src="${folderIcon}" 
            style="width: 16px; height: 16px; margin-right: 6px; vertical-align: middle;" 
            alt="">`;

        return `<span class="${cssClass}" 
              onclick="event.stopPropagation(); handleDirectoryClick(${index + 2}); return false;"
              ontouchend="event.stopPropagation(); handleDirectoryTouch(event, ${index + 2}); return false;"
              onmousedown="event.stopPropagation(); startBreadcrumbDrag(event, ${index + 2}); return false;"
              style="cursor: pointer; user-select: none; margin-right: 12px; padding: 4px 8px; border-radius: 12px; transition: all 0.2s ease;"
              onmouseover="this.style.background='rgba(255,255,255,0.1)'"
              onmouseout="this.style.background='transparent'">
        ${iconHtml}${segment}
    </span>`;
    });

    function setupBreadcrumbClickHandlers() {
    const breadcrumbs = document.querySelectorAll('.breadcrumb-segment');
    
    breadcrumbs.forEach(breadcrumb => {
