const NavigationCore = {
    isValidPath(pathArray) {
        return validatePath(pathArray);
    },
    
   getItemsInPath(pathArray) {
        let structure = folderStructure;
        
        // Handle root/desktop levels
        if (pathArray.length === 1) {
            // Root level - show main folders
            return ['System', 'Logic', 'Mall', 'Farm', 'Prompts', 'Media', 'Browser', 'Arcade', 'Builder'];
        } else if (pathArray.length === 2 && pathArray[1] === 'Desktop') {
            // Desktop level - show main folders
            return ['System', 'Logic', 'Mall', 'Farm', 'Prompts', 'Media', 'Browser', 'Arcade', 'Builder'];
        }
        
        // Navigate to the target location
        for (let i = 2; i < pathArray.length; i++) {
            if (structure[pathArray[i]]) {
                structure = structure[pathArray[i]];
            } else {
                return [];
            }
        }
        
        if (typeof structure === 'object' && !structure.app && !structure.file) {
            return Object.keys(structure).filter(key => key !== 'app' && key !== 'file');
        }
        
        return [];
    },
    
    getItemType(pathArray, itemName) {
        let structure = folderStructure;
        
        // Handle root/desktop levels
        if (pathArray.length <= 2) {
            // At root or desktop level - check if it's a main folder
            const mainFolders = ['System', 'Logic', 'Mall', 'Farm', 'Prompts', 'Media', 'Browser', 'Arcade', 'Builder'];
            if (mainFolders.includes(itemName)) {
                if (itemName === 'Arcade') return 'app';
                return 'folder';
            }
            return 'unknown';
        }
        
        // Navigate to current location
        for (let i = 2; i < pathArray.length; i++) {
            if (structure[pathArray[i]]) {
                structure = structure[pathArray[i]];
            } else {
                return 'unknown';
            }
        }
        
        const item = structure[itemName];
        if (!item) return 'unknown';
        
        if (item.app && item.file) return 'app';
        if (item.levels && item.cover) return 'subject';
        if (item.type === 'video' || item.type === 'youtube') return 'media';
        if (typeof item === 'object' && !item.description) return 'folder';
        return 'item';
    },
    
    canNavigateToItem(pathArray, itemName) {
        const itemType = this.getItemType(pathArray, itemName);
        return ['folder', 'subject', 'app', 'media'].includes(itemType);
    },
    
    openItem(pathArray, itemName, windowId) {
        const itemType = this.getItemType(pathArray, itemName);
        const newPath = [...pathArray, itemName];
        
        switch(itemType) {
            case 'app':
                const appData = this.getItemData(pathArray, itemName);
                openApp(itemName, appData.file);
                break;
            case 'subject':
                PathManager.updatePath(windowId, newPath);
                const subjectData = this.getItemData(pathArray, itemName);
                const content = generateLanguageLevels(itemName, subjectData.levels, subjectData.cover, windowId);
                const contentElement = document.getElementById(windowId + '-content');
                if (contentElement) {
                    contentElement.style.padding = '16px';
                    contentElement.innerHTML = content;
                }
                break;
            case 'media':
                const mediaData = this.getItemData(pathArray, itemName);
                if (mediaData.type === 'video') {
                    openVideoWindow(itemName, mediaData.file, windowId);
                } else if (mediaData.type === 'youtube') {
                    openYouTubeWindow(itemName, mediaData.url, windowId);
                }
                break;
            case 'folder':
            default:
                PathManager.updatePath(windowId, newPath);
                const folderContent = generateFolderContent(itemName, windowId);
                const folderContentElement = document.getElementById(windowId + '-content');
                if (folderContentElement) {
                    folderContentElement.style.padding = '16px';
                    folderContentElement.innerHTML = folderContent;
                }
                break;
        }
    },
    
    getItemData(pathArray, itemName) {
        let structure = folderStructure;
        
        for (let i = 2; i < pathArray.length; i++) {
            if (structure[pathArray[i]]) {
                structure = structure[pathArray[i]];
            }
        }
        
        return structure[itemName] || {};
    }
