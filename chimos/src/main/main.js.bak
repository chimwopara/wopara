    setupBackSwipe() {
        let startX = 0;
        let startY = 0;
        let startTime = 0;
        
        document.addEventListener('touchstart', (e) => {
            const touch = e.touches[0];
            startX = touch.clientX;
            startY = touch.clientY;
            startTime = Date.now();
        }, { passive: true });
        
        document.addEventListener('touchend', (e) => {
            const touch = e.changedTouches[0];
            const endX = touch.clientX;
            const endY = touch.clientY;
            const endTime = Date.now();
            
            const deltaX = endX - startX;
            const deltaY = Math.abs(endY - startY);
            const deltaTime = endTime - startTime;
            
            // Check for back swipe: left to right, minimal vertical movement, quick gesture
            if (deltaX > 50 && deltaY < 100 && deltaTime < 500 && startX < 100) {
                const focusedWindow = openWindows.find(w => {
                    const element = document.getElementById(w.id);
                    return element && parseInt(element.style.zIndex) === windowZIndex;
                });
                
                if (focusedWindow) {
                    e.preventDefault();
                    PathManager.navigateBack(focusedWindow.id);
                    
                    // Visual feedback
                    const windowElement = document.getElementById(focusedWindow.id);
                    if (windowElement) {
                        windowElement.style.transform = 'translateX(20px)';
                        setTimeout(() => {
                            windowElement.style.transform = '';
                        }, 200);
                    }
                }
            }
        }, { passive: false });
