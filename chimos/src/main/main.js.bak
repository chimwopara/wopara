function openArcadeWindow() {
    // Calculate position near mouse
    const mouseX = window.fsLastMousePosition ? window.fsLastMousePosition.x : 200;
    const mouseY = window.fsLastMousePosition ? window.fsLastMousePosition.y : 200;
    const windowX = Math.max(20, mouseX - 400);
    const windowY = Math.max(80, mouseY - 200);
    
    // Create new window
    const windowId = createWindow('Arcade - Fromsupply', '', 800, 600, windowX, windowY);
    
    // Set path to show "Desktop/Arcade" in directory bar
    const newPath = ['Fromsupply', 'Desktop', 'Arcade'];
    PathManager.updatePath(windowId, newPath);
    
    // Create iframe content for arcade.html with focus management
    const content = `
        <iframe src="../arcade/arcade.html" 
                style="width: 100%; height: 100%; border: none; opacity: 0; transition: opacity 0.3s ease;"
                onload="this.style.opacity = '1'; handleArcadeIframeLoad('${windowId}');">
        </iframe>
    `;
    
    // Set content in window
    const contentElement = document.getElementById(windowId + '-content');
    if (contentElement) {
        contentElement.style.padding = '0';
        contentElement.innerHTML = content;
        setTimeout(() => checkWindowControlState(windowId), 100);
    }
    
    // Focus the window and automatically maximize
    focusWindow(windowId);
    
    // Use the same maximization logic as toggleMaximize
    setTimeout(() => {
        const windowElement = document.getElementById(windowId);
        const window = openWindows.find(w => w.id === windowId);
        
        if (windowElement && window) {
            // Save original position (following exact toggleMaximize pattern)
            const rect = windowElement.getBoundingClientRect();
            window.originalPosition = {
                x: rect.left,
                y: rect.top,
                width: rect.width,
                height: rect.height
            };
            
            // Remove any existing snap classes first
            const snapClasses = ['snapped-left', 'snapped-right', 'snapped-top', 'snapped-bottom', 
                               'snapped-top-left', 'snapped-top-right', 'snapped-bottom-left', 
                               'snapped-bottom-right'];
            snapClasses.forEach(cls => windowElement.classList.remove(cls));
            
            // Apply maximized class
            windowElement.classList.add('maximized');
            window.snapped = 'maximized';
            
            // Ensure focus stays on window container, not iframe
            focusWindow(windowId);
        }
    }, 100);
    
    return windowId;
}
function handleArcadeIframeLoad(windowId) {
    // Ensure the window container keeps focus, not the iframe
    setTimeout(() => {
        focusWindow(windowId);
        
        // Add click handler to window to restore focus when clicked
        const windowElement = document.getElementById(windowId);
        if (windowElement) {
            // Remove any existing arcade focus handler
            windowElement.removeEventListener('click', windowElement.arcadeFocusHandler);
            
            // Add new focus handler
            windowElement.arcadeFocusHandler = function(e) {
                // Ensure keyboard shortcuts work by focusing the window
                focusWindow(windowId);
                
                // Focus the document to ensure keyboard events work
                document.activeElement.blur();
                window.focus();
            };
            
            windowElement.addEventListener('click', windowElement.arcadeFocusHandler);
        }
    }, 200);
}

