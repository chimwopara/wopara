    isOverIcon(point, icon) {
        if (!icon) return false;
        const rect = icon.getBoundingClientRect();
        return point.clientX >= rect.left && 
               point.clientX <= rect.right && 
               point.clientY >= rect.top && 
               point.clientY <= rect.bottom;
    },
    
    isNearIcon(point, icon) {
        if (!icon) return false;
        const rect = icon.getBoundingClientRect();
        const centerX = rect.left + rect.width / 2;
        const centerY = rect.top + rect.height / 2;
        const distance = Math.sqrt(
            Math.pow(point.clientX - centerX, 2) + 
            Math.pow(point.clientY - centerY, 2)
        );
        return distance < 120;
    },
    
   toggleSaveWindow(windowId) {
    const windowData = openWindows.find(w => w.id === windowId);
    if (!windowData || !windowData.currentPath) return;
    
    const pathString = windowData.currentPath.join('/');
    const savedIndex = window.fsTappedDirectories.indexOf(pathString);
    
   if (savedIndex >= 0) {
    // Unsave
    window.fsTappedDirectories.splice(savedIndex, 1);
    saveTappedDirectoriesToStorage();
    
