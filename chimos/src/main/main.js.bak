// EVENT MANAGER
const EventManager = {
    init() {
document.addEventListener('mousemove', this.handleMouseMove.bind(this));
document.addEventListener('mouseup', this.handleMouseUp.bind(this));
document.addEventListener('keydown', this.handleKeyboard.bind(this));

// Add touch support for mobile
document.addEventListener('touchmove', this.handleTouchMove.bind(this), { passive: false });
document.addEventListener('touchend', this.handleTouchEnd.bind(this));
},
    
    handleMouseMove(e) {
        window.fsLastMousePosition = { x: e.clientX, y: e.clientY };
        DragManager.update(e);
        
    },
    
    handleMouseUp(e) {
        DragManager.end(e);
        
    },

    handleTouchMove(e) {
e.preventDefault(); // Prevent scrolling while dragging
// Convert touch to mouse-like event
if (e.touches.length > 0) {
    const touch = e.touches[0];
    const mouseEvent = {
        clientX: touch.clientX,
        clientY: touch.clientY,
        preventDefault: () => e.preventDefault(),
        stopPropagation: () => e.stopPropagation()
    };
    this.handleMouseMove(mouseEvent);
}
},

handleTouchEnd(e) {
// Convert touch to mouse-like event
const touch = e.changedTouches[0];
const mouseEvent = {
    clientX: touch.clientX,
    clientY: touch.clientY,
    preventDefault: () => e.preventDefault(),
    stopPropagation: () => e.stopPropagation()
};

// Check if this was a drag operation
const wasDragging = DragManager.active;

this.handleMouseUp(mouseEvent);

// Prevent ghost clicks after dragging
if (wasDragging) {
    e.preventDefault();
    e.stopPropagation();
}
},
    
    handleKeyboard(e) {
if (e.target.matches('input, textarea, [contenteditable]')) return;

// Always handle shortcuts even when iframe has focus
e.preventDefault();
        
        const focusedWindow = openWindows.find(w => {
            const element = document.getElementById(w.id);
            return element && parseInt(element.style.zIndex) === windowZIndex;
        });

        const shortcuts = {
'Escape': () => {
    hidePhoneOverlay();
    hideSavedOverlay();
    if (openWindows.length > 0) {
        const topWindow = openWindows[openWindows.length - 1];
        closeWindow(topWindow.id);
    }
},
'q': () => {
    if (focusedWindow) {
        addToHistory('close', { windowId: focusedWindow.id, windowData: { ...focusedWindow } });
        closeWindow(focusedWindow.id);
    }
},
' ': (e) => { e.preventDefault(); showPhoneOverlay(); },
'd': () => focusedWindow && duplicateWindow(focusedWindow.id),
'c': () => focusedWindow && closeOtherWindows(focusedWindow.id),
'b': () => togglePhoneOverlay(),
'v': () => toggleSavedOverlay(),
'f': () => {
    if (focusedWindow) {
        addToHistory('snap', { windowId: focusedWindow.id, previousState: getWindowState(focusedWindow.id) });
        toggleMaximize(focusedWindow.id);
    }
},
'ArrowLeft': () => {
    if (focusedWindow) {
        addToHistory('snap', { windowId: focusedWindow.id, previousState: getWindowState(focusedWindow.id) });
        snapWindowLeft(focusedWindow.id);
    }
},
'ArrowRight': () => {
    if (focusedWindow) {
        addToHistory('snap', { windowId: focusedWindow.id, previousState: getWindowState(focusedWindow.id) });
        snapWindowRight(focusedWindow.id);
    }
},
'ArrowUp': () => {
    if (focusedWindow) {
        addToHistory('snap', { windowId: focusedWindow.id, previousState: getWindowState(focusedWindow.id) });
        snapWindowTop(focusedWindow.id);
    }
},
'ArrowDown': () => {
    if (focusedWindow) {
        addToHistory('snap', { windowId: focusedWindow.id, previousState: getWindowState(focusedWindow.id) });
        snapWindowBottom(focusedWindow.id);
    }
},
'j': () => toggleFolderArrangement(),
'z': () => undoLastAction(),
'<': () => focusedWindow && PathManager.navigateBack(focusedWindow.id),
'>': () => focusedWindow && PathManager.navigateForward(focusedWindow.id),
',': () => focusedWindow && PathManager.navigateBack(focusedWindow.id),
'.': () => focusedWindow && PathManager.navigateForward(focusedWindow.id),
'h': () => openHiddenSystemWindow()
};
        
        const action = shortcuts[e.key];
        if (action) action(e);

        // Window management shortcuts (Cmd/Ctrl + key)
        if (e.metaKey || e.ctrlKey) {
            if (focusedWindow) {
                switch(e.key) {
                    case 'm':
                    case 'M':
                        e.preventDefault();
                        minimizeWindow(focusedWindow.id);
                        break;
                    case 'f':
                    case 'F':
                        e.preventDefault();
                        toggleMaximize(focusedWindow.id);
                        break;
                    case 'w':
                    case 'W':
                        e.preventDefault();
                        closeWindow(focusedWindow.id);
                        break;
                }
            }
        }
    },
    
   
};

