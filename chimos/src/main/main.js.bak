function setupSavedSwipeToDismiss(overlay) {
    let startX = 0;
    let startY = 0;
    let startTime = 0;
    
    overlay.addEventListener('touchstart', function(e) {
        startX = e.touches[0].clientX;
        startY = e.touches[0].clientY;
        startTime = Date.now();
    }, { passive: true });
    
    overlay.addEventListener('touchend', function(e) {
        const endX = e.changedTouches[0].clientX;
        const endY = e.changedTouches[0].clientY;
        const deltaX = Math.abs(endX - startX);
        const deltaY = startY - endY; // Positive for swipe up
        const deltaTime = Date.now() - startTime;
        
        if (deltaTime > 500) return; // Too slow
        
        // Check if we're at the bottom of scroll for swipe up
        const savedGrid = document.querySelector('.saved-grid');
        const isAtBottom = savedGrid && (savedGrid.scrollTop + savedGrid.clientHeight >= savedGrid.scrollHeight - 10);
        
        // Swipe left or right to dismiss
        if (deltaX > 100 && Math.abs(deltaY) < 50) {
            hideSavedOverlay();
        }
        // Swipe up to dismiss (only when at bottom of scroll)
        else if (deltaY > 100 && deltaX < 50 && isAtBottom) {
            hideSavedOverlay();
        }
    }, { passive: true });
}

