// Initialize Google Sign-in
function initializeGoogleSignIn() {
    // Wait for Google to be available
    if (!window.google || !window.google.accounts || !window.google.accounts.id) {
        console.log('Google Sign-in not ready yet, retrying...');
        setTimeout(initializeGoogleSignIn, 100);
        return;
    }

    try {
        // Mobile vs Desktop configuration
        const isMobile = window.innerWidth <= 768;
        
        google.accounts.id.initialize({
            client_id: "495690405484-ikrq0pgtkuc0fcqj9p6cski79dleagma.apps.googleusercontent.com",
            callback: handleCredentialResponse,
            auto_select: false,
            cancel_on_tap_outside: false,
            use_fedcm_for_prompt: false, // Disable FedCM which can cause mobile issues
            itp_support: true // Better mobile support
        });

        // Check if user is already logged in
        const isLoggedIn = localStorage.getItem('fs_user_logged_in') === 'true';
        const profileData = localStorage.getItem('fs_user_profile');
        
        if (isLoggedIn && profileData) {
            try {
                const profile = JSON.parse(profileData);
                userData.isLoggedIn = true;
                userData.profile = profile;
                userData.hasMembership = localStorage.getItem('fs_user_membership') === 'true';
                updateUserUI();
                document.body.style.pointerEvents = 'auto';
            } catch (error) {
                console.error('Error loading saved profile:', error);
                localStorage.removeItem('fs_user_logged_in');
                localStorage.removeItem('fs_user_profile');
                renderSignInButton();
            }
        } else {
            renderSignInButton();
        }
    } catch (error) {
        console.error('Google Sign-in initialization error:', error);
        setTimeout(initializeGoogleSignIn, 500);
    }
}

